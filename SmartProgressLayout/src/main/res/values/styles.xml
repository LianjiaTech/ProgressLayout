<resources>

  <declare-styleable name="ProgressLayout">
    <attr name="loading_layout" format="integer"/> <!--正在加载-->
    <attr name="none_content" format="integer"/> <!--无内容-->
    <attr name="network_content" format="integer"/>  <!--网络错误-->
    <attr name="failed_content" format="integer"/><!--加载失败-->
  </declare-styleable>

  <!--Default Style-->
  <style name="DefaultSmartStyle">
    <item name="loading_layout">@layout/view_loading_layout</item>
    <item name="none_content">@layout/view_none_layout</item>
    <item name="network_content">@layout/view_net_error_layout</item>
    <item name="failed_content">@layout/view_failed_layout</item>
  </style>


  <style name="message_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/material_16dp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/material_18sp</item>
  </style>

  <style name="hint_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/material_16dp</item>
    <item name="android:textColor">@android:color/darker_gray</item>
    <item name="android:textSize">@dimen/material_13sp</item>
  </style>

</resources>